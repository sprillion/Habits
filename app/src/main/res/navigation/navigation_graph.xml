<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_in_app"
    app:startDestination="@id/typesViewPagerFragment">

    <fragment
        android:id="@+id/typesViewPagerFragment"
        android:name="com.sprill.habits.fragments.TypesViewPagerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_types_view_pager" >
        <action
            android:id="@+id/action_typesViewPagerFragment_to_createEditFragment"
            app:destination="@id/createEditFragment" />
        <action
            android:id="@+id/action_typesViewPagerFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
    </fragment>
    <fragment
        android:id="@+id/createEditFragment"
        android:name="com.sprill.habits.fragments.CreateEditFragment"
        android:label="{labelType}"
        tools:layout="@layout/fragment_create_edit" >
        <action
            android:id="@+id/action_createEditFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
        <argument
            android:name="labelType"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.sprill.habits.fragments.AboutAppFragment"
        android:label="@string/about_app_screen_title"
        tools:layout="@layout/fragment_about_app" />
    <fragment
        android:id="@+id/habitsListFragment"
        android:name="com.sprill.habits.fragments.HabitsListFragment"
        android:label="fragment_habits_list"
        tools:layout="@layout/fragment_habits_list" />
</navigation>